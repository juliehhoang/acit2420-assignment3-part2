server {
    listen 80;
    server_name localhost;

    # Root directory for the webgen HTML pages
    root /var/lib/webgen/HTML;

    # Serve the index.html file generated by generate_index
    location / {
        index index.html;
    }

    # Serve files from /var/lib/webgen/documents directory
    location /documents {
        alias /var/lib/webgen/documents;
        autoindex on;
        autoindex_exact_size off;
        autoindex_format html;
    }
}

